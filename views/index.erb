
<section>
  <article class="row">
    <div class='col-md-6'>
      <h2>Hey, welcome!</h2>
      <p>The Happy Things API is here!</p>
    </div>
    <div class='col-md-6'>
      <h3>Happy Things</h3>
      <div id='happy_things'></div>

      <h3>Kittens</h3>
      <div id='kittens'></div>


    </div>
  </article>
</section>

<script type="text/javascript">
  $(document).ready(function() {
    $.getJSON('/api',function(data) {

      for (var item in data) {
          $('#happy_things').append('<li>' + data[item] + '</li>');
      }

    });

    $.getJSON('/api-kittens',function(data) {

      for (var item in data) {
          $('#kittens').append('<li>' + data[item] + '</li>');
      }

    });

  });
</script>
